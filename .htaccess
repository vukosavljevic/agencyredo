RewriteEngine On

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to clean URLs (301 permanent redirect)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Custom clean URL mappings for specific pages
RewriteRule ^portfolio/?$ portfolio-3.html [NC,L]
RewriteRule ^project/?$ project-2.html [NC,L]

# Handle index page - redirect index.html to root
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^ /? [R=301,L]

# DirectoryIndex for clean root access
DirectoryIndex index.html

# Optional: Force trailing slash removal for consistency
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L] 